---
import BasicLayout from "../layouts/BasicLayout.astro";
import Navbar from "../components/Navbar.astro";
import Contact from "../components/Sections/Contact.astro";
---

<script>
  document
    .getElementById("get-in-touch")
    ?.addEventListener("click", function () {
      const targetElement = document.getElementById("contact");
      if (targetElement) {
        targetElement.scrollIntoView({ behavior: "smooth" });
      }
    });
</script>
<BasicLayout title="Home" description="Home Page">
  <div
    slot="loader"
    class="loader star-clip-path bg-secondary-900 text-neutral-50 text-3xl font-black uppercase flex justify-center items-center w-screen h-screen z-50 fixed top-0 bottom-0 right-0 left-0 w-screen h-screen"
  >
  </div>

  <div class="w-screen h-screen sticky top-0 dotted-bg">
    <Navbar />
    <div
      class="h-body-with-navbar w-full flex flex-col justify-center items-center gap-10"
    >
      <div class="flex flex-col justify-center items-center gap-2.5">
        <h1 class="text-6xl md:text-8xl/[0.7] xl:text-9xl/[0.8] font-bold">
          Diadema <br />
          <span class="font-normal">Studio</span>
        </h1>
        <p class="text-2xl">Innovate, Design, Inspire</p>
      </div>
      <button
        id="get-in-touch"
        class="rounded-lg bg-amber px-5 py-2.5 text-secondary-900"
        >Get in touch</button
      >
    </div>
  </div>
  <section
    class="w-[calc(100vw-4rem)] mx-auto mt-[-2rem] h-[calc(100vh-1rem)] sticky top-[1rem] rounded-t-2xl"
  >
    <h2>Projects</h2>
  </section>
  <section
    class="w-[calc(100vw-3rem)] mx-auto h-[calc(100vh-2rem)] sticky top-[2rem] rounded-t-2xl"
  >
    <h2>About</h2>
  </section>
  <section
    class="w-[calc(100vw-2rem)] mx-auto h-[calc(100vh-3rem)] sticky top-[3rem] rounded-t-2xl"
  >
    <h2>Services</h2>
  </section>
  <Contact />
</BasicLayout>
