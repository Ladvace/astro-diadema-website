<section
  id="contact"
  class="w-[calc(100vw-1rem)] mx-auto h-[calc(100vh-4rem)] sticky top-[4rem] rounded-t-2xl"
>
  <h2>Contact</h2>
  <div class="flex">
    <form action="#" method="POST" class="flex-[2]">
      <div class="mb-4">
        <label for="name" class="block text-secondary-200 mb-2">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="w-full px-4 py-2 bg-secondary-700 text-secondary-50 border border-secondary-600 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary-400"
        />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-secondary-200 mb-2">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-2 bg-secondary-700 text-secondary-50 border border-secondary-600 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary-400"
        />
      </div>
      <div class="mb-4">
        <label for="message" class="block text-secondary-200 mb-2"
          >Message</label
        >
        <textarea
          id="message"
          name="message"
          rows="4"
          class="w-full px-4 py-2 bg-secondary-700 text-secondary-50 border border-secondary-600 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary-400"
        ></textarea>
      </div>
      <div class="flex items-center justify-between">
        <button
          type="submit"
          class="px-4 py-2 bg-secondary-600 text-secondary-50 rounded-md hover:bg-secondary-500 focus:outline-none focus:ring-2 focus:ring-secondary-400"
          >Send Message</button
        >
      </div>
    </form>
    <div class="flex flex-1"></div>
  </div>
</section>
