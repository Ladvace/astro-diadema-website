---
import BookmarkSvg from "../BookmarkSvg.astro";
import ContactForm from "../ContactForm";
---

<section
  id="contact"
  class="relative w-[calc(100vw-1rem)] mx-auto h-[calc(100vh-4rem)] sticky top-[4rem] rounded-t-2xl"
>
  <BookmarkSvg />
  <h2>Contact us</h2>
  <div class="flex flex-col lg:flex-row gap-5 z-20">
    <ContactForm client:load />
    <div class="flex flex-1 border-1 border-secondary-600 rounded-2xl p-4">
      <h3>Get in touch</h3>
    </div>
  </div>
</section>
